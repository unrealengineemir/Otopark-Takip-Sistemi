@model AspNetCoreMvc.Entities.Dtos.AracAddDto
<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><span class="fas fa-plus"></span> Araç Girişi</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="İptal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Add" id="form-arac-add">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display: none;"></div>
                    <div class="form-group">
                        <label asp-for="LicensePlate"></label>
                        <input class="form-control" asp-for="LicensePlate" />
                        <span class="text-danger" asp-validation-for="LicensePlate"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EnterDate"></label>
                        <input class="form-control" asp-for="EnterDate" />
                        <span class="text-danger" asp-validation-for="EnterDate"></span>
                    </div>
                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" asp-for="Subscriber" />
                        <label asp-for="Subscriber" class="form-check-label"></label>
                        <span class="text-danger" asp-validation-for="Subscriber"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SubscriberRFID"></label>
                        <input class="form-control" asp-for="SubscriberRFID" />
                        <span class="text-danger" asp-validation-for="SubscriberRFID"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Note"></label>
                        <input class="form-control" asp-for="Note" />
                        <span class="text-danger" asp-validation-for="Note"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-block" data-dismiss="modal"><span class="fas fa-times"></span> İptal</button>
                <button type="button" class="btn btn-primary btn-block" id="btnSave"><span class="fas fa-save"></span> Kaydet</button>
            </div>
        </div>
    </div>
</div>
