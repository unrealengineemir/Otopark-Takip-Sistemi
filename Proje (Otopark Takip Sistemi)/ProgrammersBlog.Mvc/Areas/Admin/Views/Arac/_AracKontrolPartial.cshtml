@model AspNetCoreMvc.Entities.Dtos.AracAddDto
<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><span class="fas fa-plus"></span> UYARI </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="İptal"> 
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Add" id="form-arac-add">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display: none;"></div>
                    <div class="form-group">
                        <p>Otopark kapasitesi dolu başka giriş yapılamaz !!!</p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
